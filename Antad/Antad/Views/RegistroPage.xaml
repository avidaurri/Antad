                    Text="DE"
                    FontSize="25"
                    TextColor="DimGray"
                    FontFamily="{StaticResource MontserratBold}"
                    HorizontalTextAlignment="Center"/>
                <Label 
                    HorizontalOptions="Center"
                    Text="7"
                    FontSize="35"
                    TextColor="Purple"
                    FontFamily="{StaticResource MontserratBold}"
                    HorizontalTextAlignment="Center"/>
            </StackLayout>

        </Grid>


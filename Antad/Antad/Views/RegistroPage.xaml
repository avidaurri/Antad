<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Antad.Views.RegistroPage" 
              Title="REGISTRO" >

    <ContentPage
        xmlns:i18n="clr-namespace:Antad.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
           
             BackgroundImageSource="fondosplash">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackLayout Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Comencemos tu registro!!" FontFamily="{StaticResource MontserratBold}" FontSize="23" HorizontalOptions="Center" TextColor="Purple"/>
            </StackLayout>

            <StackLayout Grid.ColumnSpan="3" Orientation="Horizontal" Grid.Row="1" Padding="20,0,20,0">
                <Label FontFamily="{StaticResource MontserratRegular}" FontSize="17" TextColor="DimGray" 
                    Text="Inicia tu registro escribiendo los datos de acceso a la aplicación"
                    HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalTextAlignment="Center"/>
            </StackLayout>

           <StackLayout Orientation="Vertical" 
                        
                         Grid.Row="2" Grid.Column="0"
                        VerticalOptions="Center">
                <Image Source="ic_left" VerticalOptions="Center" WidthRequest="30" />
            </StackLayout>
            <Frame Grid.Row="2" Grid.Column="1" BindingContext="{Binding Register}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                     
                    </Grid.RowDefinitions>
                    
                    <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                        <Image
                            HeightRequest="180"
                    Source="{Binding ImageSourceFoto}">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CargarImagenCommand}"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Label
                    FontSize="Small"
                    HorizontalOptions="Center"
                            TextColor="DimGray"
                           HorizontalTextAlignment="Center"
                            FontFamily="{StaticResource MontserratLight}"
                    Text="Presiona para cargar tu foto de perfil">
                        </Label> 
                    </StackLayout>
                    <StackLayout Orientation="Vertical" Grid.Row="1" VerticalOptions="Center">
                        <Entry VerticalOptions="CenterAndExpand"
                              FontFamily="{StaticResource MontserratRegular}"
                            Grid.ColumnSpan="2"
                            Grid.Row="4"
                              Text="{Binding Login}"
                            Placeholder="Login">
                        </Entry>

                        <Entry VerticalOptions="CenterAndExpand"
                              FontFamily="{StaticResource MontserratRegular}"
                            Grid.ColumnSpan="2"
                            Grid.Row="5"
                            IsPassword="True"
                            Text="{Binding Password}"
                            Placeholder="Password">
                        </Entry>
                    </StackLayout>


                </Grid>
            </Frame>
            <StackLayout Orientation="Vertical" Grid.Row="2" Grid.Column="2"
                         VerticalOptions="Center">
                <Image Source="ic_action_chevron_right" VerticalOptions="Center" WidthRequest="30"  />
            </StackLayout>

            <StackLayout Grid.ColumnSpan="3"
                       Orientation="Horizontal" HorizontalOptions="Center" Grid.Row="3">
                <Image Source="indicador_morado" WidthRequest="50"/>
                <Image Source="indicador_gris" WidthRequest="35"/>
                <Image Source="indicador_gris" WidthRequest="35"/>
                <Image Source="indicador_gris" WidthRequest="35"/>
                <Image Source="indicador_gris" WidthRequest="35"/>
                <Image Source="indicador_gris" WidthRequest="35"/>
            </StackLayout>
            <StackLayout Grid.ColumnSpan="3" 
                         Orientation="Horizontal" HorizontalOptions="Center" Grid.Row="4">
                <Label 
                    HorizontalOptions="Center"
                    Text="1"
                    FontSize="40"
                    TextColor="Purple"
                    FontFamily="{StaticResource MontserratBold}"
                    HorizontalTextAlignment="Center"/>
                <Label 
                    HorizontalOptions="Center"
                    Text="DE"
                    FontSize="30"
                    TextColor="DimGray"
                    FontFamily="{StaticResource MontserratBold}"
                    HorizontalTextAlignment="Center"/>
                <Label 
                    HorizontalOptions="Center"
                    Text="6"
                    FontSize="40"
                    TextColor="Purple"
                    FontFamily="{StaticResource MontserratBold}"
                    HorizontalTextAlignment="Center"/>
            </StackLayout>

        </Grid>


        
    </ContentPage>
    
    <ContentPage
        xmlns:i18n="clr-namespace:Antad.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
           
             BackgroundImageSource="fondosplash">
        <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Register}">
            <StackLayout
                Padding="5">

                <Frame BorderColor="MediumPurple"  BackgroundColor="Transparent"  HasShadow="True" CornerRadius="10" Margin="5" Padding="20,0,20,0" VerticalOptions="Start">
                    
              
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                     </Grid.RowDefinitions>

                    <Entry
                          FontFamily="{StaticResource MontserratRegular}"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        Text="{Binding Nombre}"
                        Placeholder="Nombre">
                    </Entry>

                    <Entry
                          FontFamily="{StaticResource MontserratRegular}"
                        Grid.ColumnSpan="2"
                        Grid.Row="1"
                        Text="{Binding ApellidoPaterno}"
                        Placeholder="Apellido Paterno">
                    </Entry>

                    <Entry
                          FontFamily="{StaticResource MontserratRegular}"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        Text="{Binding ApellidoMaterno}"
                        Placeholder="Apellido Materno">
                    </Entry>

                    <Entry
                          FontFamily="{StaticResource MontserratRegular}"
                        Grid.ColumnSpan="2"
                        Grid.Row="3"
                        Keyboard="Email"
                        Text="{Binding Email}"
                        Placeholder="Email">
                    </Entry>



                    <Entry
                          FontFamily="{StaticResource MontserratRegular}"
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        Text="{Binding Curp}"
                        Placeholder="CURP">
                    </Entry>

                    <Entry
                          FontFamily="{StaticResource MontserratRegular}"
                        Grid.ColumnSpan="2"
                        Grid.Row="7"
                        Text="{Binding EmpresaInteres}"
                        Placeholder="Empresa Interes">
                    </Entry>
                    <Label
                        Grid.Column="0"
                          FontFamily="{StaticResource MontserratRegular}"
                        Grid.Row="8"
                        Text="Puesto solicitado"
                        VerticalOptions="Center">
                    </Label>
                    <Picker x:Name="IndustryTypePicker1" 
                              FontFamily="{StaticResource MontserratRegular}"
                        Grid.Column="1"
                        Grid.Row="8"
                            SelectedIndex="{Binding Puesto}">
                        <Picker.Items>
                            <x:String>Promotor</x:String>
                            <x:String>Supervisor</x:String>
                            <x:String>Intramuro</x:String>
                        </Picker.Items>
                    </Picker>


                </Grid>
                </Frame>



            </StackLayout>
        </ScrollView>
    </ContentPage.Content>    
    </ContentPage>



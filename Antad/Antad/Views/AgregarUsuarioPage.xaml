<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:i18n="clr-namespace:Antad.Helpers"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Antad.Views.AgregarUsuarioPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="{i18n:Translate AddUsers}">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding AgregarUsuario}">
              <StackLayout
            
            Padding="5">
                <Image Source="avatar.png" />
                <Label Text="Cargar Imagen" HorizontalOptions="Center" FontSize="Small"/>
                <Label
             Text="Nombre}">
                
            </Label>
            <Entry 
                Text="{Binding nombre}"
                Placeholder="Escribe el nombre">
            </Entry>
            <Label
             Text="Usuario">

            </Label>
            <Entry 
                Text="{Binding usuario}"
                Placeholder="Usuario">
            </Entry>
            <Label
             Text="Password">

            </Label>
            <Entry
                Text="{Binding password}"
                IsPassword="True"
                Placeholder="Password">
            </Entry>
            <Label
             Text="CURP">

            </Label>
            <Entry 
                Text="{Binding curp}"
                Placeholder="CURP">
            </Entry>
            <Label
             Text="RFC">

            </Label>
            <Entry 
                Text="{Binding rfc}"
                Placeholder="RFC">
            </Entry>
            <ActivityIndicator
                VerticalOptions="CenterAndExpand"
                IsRunning="{Binding IsRunning}">
                
            </ActivityIndicator>
            <Button
                CornerRadius="15"
                Text="Guardar"
                IsEnabled="{Binding IsEnabled}"
                Command="{Binding SaveCommand}">
                
            </Button>
        </StackLayout>      
        </ScrollView>

    </ContentPage.Content>
</ContentPage>